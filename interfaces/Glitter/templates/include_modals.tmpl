<div id="modal_item_files" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title row-wrap-text" data-bind="text: filelist.modalTitle">Loading..</h4>
            </div>
            <div class="modal-body">
                <div id="modal_item_filelist">
                
                    <form data-bind="submit: filelist.setNzbPassword" class="form-inline" role="form">
                    <div class="multioperations-selector">
                            <input type="checkbox" title="Check all" name="checkAll" onclick="checkAllFiles(this)" />
                            <a href="#" class="hoverbutton" data-bind="click: filelist.removeSelectedFiles" data-toggle="tooltip" data-placement="right" title="Remove all selected files">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                            <a href="#" onclick="hideCompletedFiles()" id="filelist-showcompleted" class="hoverbutton" data-toggle="tooltip" data-placement="right" title="Hide/show completed files">
                                <span class="glyphicon glyphicon-eye-close"></span> 100%
                            </a>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span> 
                                    <span class="glyphicon glyphicon-floppy-saved"></span>
                                </span>                   
                                <input type="text" class="form-control" id="nzb_password" placeholder="Password for unpacking" data-bind="value: filelist.modalPassword" />
                                <button type="submit" class="btn btn-default">Submit</button>
                            </div>
                        </div>

                        <table class="table item-files-table">
                            <tbody data-bind="sortable: { data: filelist.fileItems, afterMove: filelist.move, options: { containment: '#modal_item_filelist', items: '.files-sortable' } }">
                                <tr data-bind="css: { 'files-sortable' : canChange() }">
                                    <td class="row-wrap-text">  
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-info" role="progressbar" data-bind="attr: { 'style': 'width: '+percentage() }">
                                                <input type="checkbox" data-bind="attr : { 'name' : nzf_id, disabled: !canChange()  }" />
                                                <strong data-bind="text: percentage"></strong>
                                                <span data-bind="html: filenameAndAge"></span>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <div class="multioperations-selector">
                            <input type="checkbox" title="Check all" name="checkAll" onclick="checkAllFiles(this)" />
                            <a href="#" class="hoverbutton" data-bind="click: filelist.removeSelectedFiles" data-toggle="tooltip" data-placement="right" title="Remove all selected files">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </div>
                        
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 

